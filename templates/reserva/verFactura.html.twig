{% extends 'base.html.twig' %}

{% block title %} | Reservas{% endblock %}

{% block body %}
    {{ dump(reserva) }}
    {{ dump(facturaReserva) }}
    {{ dump(consumicionReserva) }}
    <div class="container factura">
        <h1>Factura</h1>
        <div class="row col-12 reserva">
            <div class="contenido">
                <div class="col-9 fecha">
                    <p>socio: {{ reserva.socio.apellido1 | e }} {{ reserva.socio.apellido2 | e }}, {{ reserva.socio.nombre | e }}</p>
                </div>
                <div class="col-3">
                    <p>reserva: {{ reserva.id }}</p>
                </div>
            </div>
            <div class="contenido">
                <div class="col-4 fecha">
                    <p>día: {{ reserva.fecha | date('Y-m-d') }}</p>
                </div>
                <div class="col-4 turno">
                    <p>turno: {{ reserva.turno.turno }}</p>
                </div>
                <div class="col-4 comensales">
                    <p>comensales: {{ reserva.comensales }}</p>
                </div>
            </div>
            <div class="contenido">
                <div class="col-4 fecha">
                    {% for mesas in reserva.mesas %}
                    <p>mesas: {{ mesas.mesa.numero }}</p>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="row col-12 consumiciones">
            <div class="contenido">
                <div class="col-6 producto">
                    <p>producto</p>
                </div>
                <div class="col-3 cantidad">
                    <p>cantidad</p>
                </div>
                <div class="col-3 precio">
                    <p>precio</p>
                </div>
                <div class="col-3 total">
                    <p>total</p>
                </div>
            </div>
            {% for consumicion_reserva in consumicionReserva %}
            <div class="contenido">
                <div class="col-6 producto">
                    <p>{{ consumicion_reserva.producto.nombre }}</p>
                </div>
                <div class="col-3 cantidad">
                    <p>{{ consumicion_reserva.cantidad }}</p>
                </div>
                <div class="col-3 precio">
                    <p>{{ consumicion_reserva.producto.precio | number_format(2, '.', ',') }}€</p>
                </div>
                <div class="col-3 total">
                    {% set total = consumicion_reserva.producto.precio * consumicion_reserva.cantidad %}
                    <p>{{ total | number_format(2, '.', ',') }}€</p>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="row col-12 factura">
            {% for factura_reserva in facturaReserva %}
            <div class="contenido">
                <p>total= {{ factura_reserva.precio | number_format(2, '.', ',') }}€</p>
            <div class="col-6 producto">
            {% endfor %}
        </div>

    </div>
{% endblock %}